[Unit]
Description=PyScada Modbus Daemon
After=network.target

[Service]
PIDFile=/home/pyscada/www/PyScadaServer/run/modbus.pid
User=pyscada
Group=pyscada
WorkingDirectory=/home/pyscada/www/PyScadaServer/
ExecStart=/usr/bin/python /home/pyscada/www/PyScadaServer/manage.py PyScadaDaemonHandler modbus start
# ExecReload=/usr/bin/python /home/pyscada/www/PyScadaServer/manage.py PyScadaDaemonHandler modbus restart
ExecStop=/usr/bin/python /home/pyscada/www/PyScadaServer/manage.py PyScadaDaemonHandler modbus stop
PrivateTmp=true

[Install]
WantedBy=multi-user.target