[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
PIDFile=/usr/local/bin/gunicorn
User=faks
Group=faks
WorkingDirectory=/home/faks/www/PyScadaServer
ExecStart=/usr/bin/gunicorn --pid /home/faks/www/PyScadaServer/run/gunicorn.pid PyScadaServer.wsgi:application
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target